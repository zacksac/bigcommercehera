{
  "components/common/subscription-form": "{{#if theme_settings.halo_homepage_layout_4}}\n    <h3 class=\"footer-info-heading\">{{lang 'newsletter.subscribe_title'}}</h3>\n{{else if theme_settings.halo_homepage_layout_3}}\n    <h3 class=\"footer-info-heading\">{{lang 'newsletter.subscribe_title_2'}}</h3>\n{{else}}\n    <h3 class=\"footer-info-heading\">{{lang 'newsletter.subscribe'}}</h3>\n{{/if}}\n{{#if settings.show_newsletter_summary }}\n    <p class=\"footer-newsletter-summary\">{{settings.newsletter_summary}}</p>\n{{/if}}\n\n<form class=\"form\" action=\"{{urls.subscribe.action}}\" method=\"post\">\n    <fieldset class=\"form-fieldset\">\n        <input type=\"hidden\" name=\"action\" value=\"subscribe\">\n        <input type=\"hidden\" name=\"nl_first_name\" value=\"bc\">\n        <input type=\"hidden\" name=\"check\" value=\"1\">\n        <div class=\"form-field\">\n            <label class=\"form-label is-srOnly\" for=\"nl_email\">{{lang 'common.email_address'}}</label>\n            <div class=\"form-prefixPostfix wrap\">\n                <input class=\"form-input\"\n                       id=\"nl_email\"\n                       name=\"nl_email\"\n                       type=\"email\"\n                       value=\"{{customer.email}}\"\n                       placeholder=\"{{#if theme_settings.halo_homepage_layout_4}}{{lang 'newsletter.subscribe_email'}}{{else}}{{lang 'newsletter.email_placeholder'}}{{/if}}\"\n                       aria-describedby=\"alertBox-message-text\"\n                       aria-required=\"true\"\n                       autocomplete=\"email\"\n                       required\n                >\n                <input class=\"button button--tertiary form-prefixPostfix-button--postfix\"\n                       type=\"submit\"\n                       value=\"{{#if theme_settings.halo_homepage_layout_4}}{{lang 'newsletter.subscribe_button'}}{{else}}{{lang 'newsletter.subscribe_submit'}}{{/if}}\"\n                >\n            </div>\n        </div>\n    </fieldset>\n</form>\n"
}
