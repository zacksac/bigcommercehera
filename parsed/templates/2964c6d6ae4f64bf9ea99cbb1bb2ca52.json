{
  "components/halothemes/product/halo-notify-me-out-of-stock": "{{#if theme_settings.halo_notify_me}}\n    <div class=\"productView-notifyMe\" {{#unless product.out_of_stock}}style=\"display: none;\"{{/unless}} data-product-title=\"{{product.title}}\" data-product-url=\"{{product.url}}\" data-product-variant=\"\">\n        <form class=\"productView-notifyMe-form\" method=\"post\" action=\"\">\n            <div class=\"form-field\">\n                <label class=\"form-label\" for=\"halo_notify_email\">\n                    {{theme_settings.halo_notify_me_text1}} {{theme_settings.halo_notify_me_text2}}\n                </label>\n                <input aria-required=\"true\" type=\"email\" class=\"form-input\" name=\"email\" id=\"halo_notify_email\" placeholder=\"{{lang 'common.insert_email_address'}}\">\n                <button type=\"button\" class=\"button button--secondary\" id=\"halo_notify_submit\">{{lang 'common.email_submit'}}</button>\n            </div>\n        </form>\n        <div class=\"productView-notifyMe-text\"></div>\n    </div>\n{{/if}}\n"
