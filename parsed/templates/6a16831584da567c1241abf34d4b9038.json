{
  "components/carousel-content": "<div class=\"heroCarousel-content{{#unless show_background}} heroCarousel-content--empty{{/unless}} {{#unless hasBackground '==' 'transparent'}} heroCarousel-content--notEmpty{{/unless}} heroCarousel-content--{{position}}\">\n    {{#if subheading}}\n        <span class=\"heroCarousel-subtitle animated\">{{subheading}}</span>\n    {{/if}}\n    {{#if heading}}\n        <h2 class=\"heroCarousel-title animated\">{{{heading}}}</h2>\n    {{/if}}\n    {{#if text}}\n        <p class=\"heroCarousel-description animated\">{{{text}}}</p>\n    {{/if}}\n    {{#or (if button_text) (if customTextBtn)}}\n        <div class=\"heroCarousel-action animated\">\n            {{#if button_text}}\n                <a href=\"{{url}}\" aria-label=\"{{#if this.alt_text.length '!=' 0}}{{this.alt_text}}{{else}}{{lang 'carousel.slide_number' slide_number=(add @index 1)}}{{/if}}, {{button_text}}\" class=\"button button--primary{{#if customTextBtn}} button--custom{{/if}}\">{{button_text}}</a>\n            {{/if}}\n            {{#if customTextBtn}}\n                <a href=\"{{customBtn}}\" aria-label=\"{{#if this.alt_text.length '!=' 0}}{{this.alt_text}}{{else}}{{lang 'carousel.slide_number' slide_number=(add @index 1)}}{{/if}}, {{button_text}}\" class=\"button button--primary button--custom\">{{customTextBtn}}</a>\n            {{/if}}\n        </div>\n    {{/or}}\n</div>\n\n"
}
