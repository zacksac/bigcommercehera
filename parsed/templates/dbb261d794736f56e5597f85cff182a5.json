{
  "components/halothemes/global/halo-recently-viewed-products": "{{#if theme_settings.halo_recently_viewed_products }}\n    <section class=\"recently-viewed-products-sidebar\">\n        <div class=\"lst-seen-widget\">\n            <div class=\"in-content\">\n                {{#if theme_settings.halo_recently_viewed_products_title '!=' ''}}\n                    <h3 class=\"title text-center\">{{theme_settings.halo_recently_viewed_products_title}}</h3>\n                {{/if}}\n                <div class=\"products-grid\" id=\"recently-viewed-products-list\">\n                    <div class=\"no-products text-center\" style=\"flex-direction: column;display:none;\">\n                        <svg class=\"icon\" role=\"img\" aria-label=\"{{lang 'common.no_item'}}\">\n                            <title>{{lang 'common.no_item'}}</title>\n                            <desc>{{lang 'common.no_item'}}</desc>\n                            <use xlink:href=\"#icon-no-products\"></use>\n                        </svg>\n                         <span class=\"text\">{{lang 'common.sorry_no_products'}}</span>\n                    </div>\n                </div>\n                <div id=\"recently-viewed-products-list-tmp\" style=\"display: none !important;\"></div>\n            </div>\n        </div>\n\n        <div class=\"lst-social-media\">\n            <div class=\"in-content\">\n                <h3 class=\"title text-center\">Social</h3>\n                <div class=\"media-grid text-center\" id=\"recently-viewed-products-share\">\n                    <ul class=\"list-social\">\n                        {{#each social_media}}\n                            <li class=\"list-social__item\">\n                                <a href=\"{{url}}\" class=\"link link--text list-social__link\">\n                                    <svg class=\"icon\" role=\"img\" aria-label=\"{{display_name}}\">\n                                        <title>{{display_name}}</title>\n                                        <desc>{{display_name}}</desc>\n                                        <use xlink:href=\"#icon-{{display_name}}\"></use>\n                                    </svg>\n                                </a>\n                                <div class=\"info list-social__info text-left\">\n                                    <a class=\"link link-underline\" href=\"{{url}}\">\n                                        <span class=\"text\">{{display_name}}</span>\n                                    </a>\n                                </div>\n                            </li>\n                        {{/each}}\n                        {{#if theme_settings.social_icon_tiktok_link}}\n                            <li class=\"list-social__item\">\n                                <a href=\"{{theme_settings.social_icon_tiktok_link}}\" class=\"link link--text list-social__link\">\n                                    <svg class=\"icon\" role=\"img\" aria-label=\"Tiktok\">\n                                        <title>Tiktok</title>\n                                        <desc>Tiktok</desc>\n                                        <use xlink:href=\"#icon-tiktok\"></use>\n                                    </svg>\n                                </a>\n                                <div class=\"info list-social__info text-left\">\n                                    <a class=\"link link-underline\" href=\"{{theme_settings.social_icon_tiktok_link}}\">\n                                        <span class=\"text\">Tiktok</span>\n                                    </a>\n                                </div>\n                            </li>\n                        {{/if}}\n                        {{#if theme_settings.social_icon_google_plus_link}}\n                            <li class=\"list-social__item\">\n                                <a href=\"{{theme_settings.social_icon_google_plus_link}}\" class=\"link link--text list-social__link\">\n                                    <svg class=\"icon\" role=\"img\" aria-label=\"Google Plus\">\n                                        <title>Google Plus</title>\n                                        <desc>Google Plus</desc>\n                                        <use xlink:href=\"#icon-google-plus\"></use>\n                                    </svg>\n                                </a>\n                                <div class=\"info list-social__info text-left\">\n                                    <a class=\"link link-underline\" href=\"{{theme_settings.social_icon_google_plus_link}}\">\n                                        <span class=\"text\">Google Plus</span>\n                                    </a>\n                                </div>\n                            </li>\n                        {{/if}}\n                        {{#if theme_settings.social_icon_snapchat_link}}\n                            <li class=\"list-social__item\">\n                                <a href=\"{{theme_settings.social_icon_snapchat_link}}\" class=\"link link--text list-social__link\">\n                                    <svg class=\"icon\" role=\"img\" aria-label=\"Snapchat Ghost\">\n                                        <title>Snapchat Ghost</title>\n                                        <desc>Snapchat Ghost</desc>\n                                        <use xlink:href=\"#icon-snapchat-ghost\"></use>\n                                    </svg>\n                                </a>\n                                <div class=\"info list-social__info text-left\">\n                                    <a class=\"link link-underline\" href=\"{{theme_settings.social_icon_snapchat_link}}\">\n                                        <span class=\"text\">Snapchat Ghost</span>\n                                    </a>\n                                </div>\n                            </li>\n                        {{/if}}\n                        {{#if theme_settings.halo_newsletter_popup}}\n                            <li class=\"list-social__item mail-newsletter\">\n                                <a href=\"#\" data-open-newsletter-popup class=\"link link--text list-social__link\" role=\"button\">\n                                    <svg class=\"icon\" role=\"img\" aria-label=\"Newsletter Sign-up\">\n                                        <title>Newsletter Sign-up</title>\n                                        <desc>Newsletter Sign-up</desc>\n                                        <use xlink:href=\"#icon-newsletter\"></use>\n                                    </svg>>\n                                </a>\n                                <div class=\"info list-social__info text-left\">\n                                    <a class=\"link link-underline\" href=\"#\" data-open-newsletter-popup role=\"button\">\n                                        <span class=\"text\">Newsletter Sign-up</span>\n                                    </a>\n                                </div>\n                            </li>\n                        {{/if}}\n                    </ul>\n                </div>\n            </div>\n        </div>\n        \n        <div class=\"wrap-icons\">\n            <div class=\"expand-recently-viewed\">\n                <svg class=\"icon\" role=\"img\" aria-label=\"Recently Viewed\">\n                    <title>Recently Viewed</title>\n                    <desc>Recently Viewed</desc>\n                    <use xlink:href=\"#icon-recently-viewed\"></use>\n                </svg>\n            </div>\n            <div class=\"expand-social-media\">\n                <svg class=\"icon\" role=\"img\" aria-label=\"Social Media\">\n                    <title>Social Media</title>\n                    <desc>Social Media</desc>\n                    <use xlink:href=\"#icon-social-media\"></use>\n                </svg>\n            </div>\n            {{#if theme_settings.halo_recently_viewed_products_top}}\n                <div class=\"backtoTop\">\n                    <svg class=\"icon\" role=\"img\" aria-label=\"{{lang 'common.top'}}\">\n                        <title>{{lang 'common.top'}}</title>\n                        <desc>{{lang 'common.top'}}</desc>\n                        <use xlink:href=\"#icon-cross-line-top\"></use>\n                    </svg>\n                </div>\n            {{/if}}\n        </div>\n    </section>\n{{/if}}\n\n"
}
