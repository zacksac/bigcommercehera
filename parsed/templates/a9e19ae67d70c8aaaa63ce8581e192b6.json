{
  "components/products/description-tabs-2": "<section class=\"productDescription\">\n    <div class=\"productDescription__block\">\n        <div class=\"productDescription__title\">\n            <h2 class=\"title\">{{lang 'products.description'}}</h2>\n        </div>\n        <div class=\"productDescription__content\">\n            {{{product.description}}}\n        </div>\n    </div>\n</section>\n{{#if settings.show_product_reviews}}\n    {{#if product.reviews.total}}\n        <section class=\"toggle productReviews\" id=\"product-reviews\" data-product-reviews>\n            <div class=\"toggle-title\">\n                <h4 class=\"page-heading\">{{lang 'products.reviews.header'}}</h4>\n                <span class=\"number-review\">{{lang 'products.reviews.number_review' total=product.reviews.total}}</span>\n                <a class=\"write-review\" href=\"{{product.url}}{{#if is_ajax}}#write_review{{/if}}\"\n                   {{#unless is_ajax }}data-reveal-id=\"modal-review-form\"{{/unless}}>\n                   {{lang 'products.reviews.write_a_review'}}\n                </a>\n                <a class=\"toggleLink\" data-collapsible href=\"#productReviews-content\" aria-expanded=\"false\">\n                    <svg class=\"icon\"><use xlink:href=\"#icon-chevron-down\"/></svg>\n                    <span class=\"toggleLink-text toggleLink-text--on\">\n                        {{lang 'products.reviews.hide'}}\n                    </span>\n                    <span class=\"toggleLink-text toggleLink-text--off\">\n                        {{lang 'products.reviews.show'}}\n                    </span>\n                </a>\n            </div>\n            <div class=\"toggle-content\" id=\"productReviews-content\" aria-hidden=\"true\">\n                <ul class=\"productReviews-list\" id=\"productReviews-list\">\n                    {{#each product.reviews.list}}\n                    <li class=\"productReview\">\n                        <article>\n                            <header>\n                                <h5 class=\"productReview-title\">{{ title }}</h5>\n                                <span class=\"productReview-rating rating--small\">\n                                    {{> components/products/ratings rating=rating}}\n                                    <span class=\"productReview-ratingNumber\">{{ rating }}</span>\n                                </span>\n                                {{#if name}}\n                                    <p class=\"productReview-author\">\n                                        {{lang 'products.reviews.post_on_by' date=date name=name }}\n                                    </p>\n                                {{else}}\n                                    <p class=\"productReview-author\">\n                                        {{lang 'products.reviews.post_on_by' date=date name=(lang 'products.reviews.anonymous_poster')}}\n                                    </p>\n                                {{/if}}\n                            </header>\n                            <p class=\"productReview-body\">{{nl2br text}}</p>\n                        </article>\n                    </li>\n                    {{/each}}\n                </ul>\n            </div>\n        </section>\n    {{/if}}\n    {{{snippet 'reviews'}}}\n{{/if}}\n",
  "components/products/ratings": "<span role=\"img\"\n    {{#if rating_target}}\n      aria-label=\"{{lang 'products.reviews.rating_aria_label' rating_target=rating_target current_rating=rating max_rating=5}}\"\n    {{else}}\n      aria-label=\"{{lang 'products.reviews.rating_aria_label' rating_target='Product' current_rating=rating max_rating=5}}\"\n    {{/if}}\n>\n    {{#for 1 5}}\n        {{#if ../this.rating '>=' $index}}\n            <span class=\"icon icon--ratingFull\">\n                <svg>\n                    <use xlink:href=\"#icon-star\" />\n                </svg>\n            </span>\n        {{else}}\n            <span class=\"icon icon--ratingEmpty\">\n                <svg>\n                    <use xlink:href=\"#icon-star\" />\n                </svg>\n            </span>\n        {{/if}}\n    {{/for}}\n</span>\n"
}
